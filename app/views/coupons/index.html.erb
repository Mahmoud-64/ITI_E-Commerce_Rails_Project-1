<h1>Coupons</h1>
<br />
<%= link_to 'New Coupon' , new_coupon_path %>

<br />
<br />



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Expiration Date</th>
            <th scope="col">Usage Limit</th>
            <th scope="col">Deduction Type</th>
            <th scope="col">Deduction Amount</th>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @coupons.each do |coupon| %>
        <tr>
            <td><%= coupon.name %></td>
            <td><%= coupon.expiration_date %></td>
            <td><%= coupon.usage_limit %></td>
            <td><%= coupon.deduction_type %></td>
            <td><%= coupon.deduction_amount %></td>
            <td><%= link_to 'Show' ,   coupon_path(coupon) %></td>
            <td><%= link_to 'Edit' ,   edit_coupon_path(coupon) %></td>
            <td><%= link_to 'Delete' ,  coupon_path(coupon) , 
                    method: :delete, 
                    data: { confirm: 'Are you sure you want to delete?' } %></td>


        </tr>
        <% end %>
    </tbody>
</table>

<br>
