<h1>Products</h1>
<%= link_to 'New Product', new_product_path, :class => 'btn btn-info' %>
<p></p>
<%= render 'search' %>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">stock quantity</th>
            <th scope="col">image</th>

        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.title %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.in_stock_quantity %></td>
            <td> <%= image_tag(product.image,:size=>"100x50",:class =>"thumbnail")if product.image.attached?%></td>
            <td><%= link_to 'Show' ,product_path(product), :class => "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-info" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>



        </tr>
        <% end %>
    </tbody>
</table>